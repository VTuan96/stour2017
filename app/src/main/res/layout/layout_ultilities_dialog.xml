<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@color/background_map"
        android:textColor="@color/white"
        android:text="Lựa chọn tiện ích"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvWeather">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thời tiết"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvBank">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ngân hàng"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvATM">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cây ATM"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvMart">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Siêu thị"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
</LinearLayout>