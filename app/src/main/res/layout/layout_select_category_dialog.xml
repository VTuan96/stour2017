<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="15dp"
        android:gravity="center"
        android:background="@color/background_map"
        android:textColor="@color/white"
        android:text="Lựa chọn lớp tìm kiếm"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvHistorySearch">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Di tích lịch sử"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvCulturalSearch">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Văn hóa lễ hội"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvFoodSearch">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Văn hóa ẩm thực"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvHotelSearch">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Khách sạn"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_main"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cvRestaurantSearch">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nhà hàng"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
</LinearLayout>